# Environment Variables
NODE_ENV=development
PORT=5000

# Database Configuration  
# MongoDB Atlas (cloud) - Update with your connection string
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/kitchencloud?retryWrites=true&w=majority&appName=Cluster0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRE=30d

# Upload Directory
UPLOAD_PATH=uploads

# Cloudinary (Optional - for cloud storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret